{{!< default}}
<style>
  .content-wrap {
    max-width: 902px;

  }
  h1,h2{
    text-transform: uppercase
  }
  p, li {
    font-size: 18px;
  }
</style>
{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div style="margin-top:18px">
  {{!-- Hero --}}
  {{> hero-product }}
</div>
  {{!-- Article --}}
  <article class="{{post_class}} content-wrap post-access-{{visibility}}">

    <div class="content">
      {{!-- Main post content --}}
      {{content}}
    </div>

  </article>

  {{!-- Elements for posts (not pages) --}}
  {{#is "post"}}
    {{#if access}}
      {{!-- Post tags & post sharing --}}
      <div class="post-footer content-wrap p-t-lg m-b">

        <span class="flex-1"></span>

        {{!-- Social sharing --}}
        {{> social-share}}
      </div>

    {{/if}}

    {{!-- Related posts --}}
    {{> related-posts}}
  {{/is}}

{{/post}}
