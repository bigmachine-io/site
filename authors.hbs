{{!< default}}

{{!-- Page Hero --}}
{{#page}}
  {{> post-hero 
    wide_img=true
    full_img=false
    img_bg=false
  }}
{{else}}
  <div class="hero__content flex flex-col flex-cc m-t-lg m-b-lg">
    <h1 class="hero__title text-center">{{t "Authors"}}</h1>
  </div>
{{/page}}

{{!-- List of author cards --}}
{{#get "authors" limit="all" include="count.posts" order="count.posts desc"}}
  <div class="row">
    {{#foreach authors}}
      {{#if count.posts}}
        <div class="col-xs-12 col-md-6 col-lg-4 m-b-lg">
          {{> author-card class="h-100"}}
        </div>
      {{/if}}
    {{/foreach}}
  </div>
{{/get}}
