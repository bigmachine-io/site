{{!< default}}

{{!-- Tag Hero --}}
{{#tag}}
<div class="hero hero-cta flex {{#if feature_image}} p-t-lg col-2 {{else}} flex flex-cc bg-gradient has-color-bg{{/if}}{{#if class}} {{class}}{{/if}}"
>
  <div class="hero__content">
    <h1 class="hero__title p-t-lg p-x-lg">{{name}}</h1>
    <p class="p-r-xl">
      {{{description}}}
    </p>
  </div>

  {{!-- Regular user content, the site cover image is used --}}
  {{#if feature_image}}
    <div class="hero__media electric" style="padding:6px">
      <img class="lazyload hero__img" 
          data-srcset="{{img_url feature_image size="xs"}} 100w,
                  {{img_url feature_image size="s"}} 300w,
                  {{img_url feature_image size="m"}} 600w,
                  {{img_url feature_image size="l"}} 1000w"
          srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
          data-sizes="auto"
          data-src="{{img_url feature_image size="m"}}"
          src="{{img_url feature_image size="xxs"}}"
          alt="{{title}}"/>
    </div>
  {{/if}}
</div>
<hr style="margin:48px" >
{{/tag}}

{{!-- The main content --}}
{{#get "posts" filter="tags.slug:{{tag.slug}}" limit=100 order="published_at asc"}}
  {{!-- Posts --}}
<div class="grid post-feed js-post-feed m-b-lg" data-post-feed="grid">
        {{#foreach posts visibility="all" order="published_at"}}
          {{> post-card 
            show_img=true 
            show_access=true
            show_excerpt=true
          }}
        {{/foreach}}

  </div>
{{/get}}